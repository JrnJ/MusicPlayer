<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:extensions="clr-namespace:MusicPlayer.Core"
                    >

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- Button -->
    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#161616" />
        <Setter Property="Foreground" Value="White" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border 
                        Background="{TemplateBinding Background}"
                        Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                        CornerRadius="4"
                        >
                        <TextBlock 
                            Text="{TemplateBinding Content}" 
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            />
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#181818" />
                        </Trigger>
                        <Trigger Property="IsMouseCaptured" Value="True">
                            <Setter Property="Background" Value="#202020" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- /Button -->

    <!-- TextBox -->
    <Style TargetType="{x:Type TextBox}" x:Key="TextBox">
        <Setter Property="Background" Value="#121212" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#787878" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <Grid VerticalAlignment="Center">
                            <TextBlock 
                                Text="{TemplateBinding Tag}" 
                                Visibility="Visible"
                                Padding="6,4,4,4" 
                                Foreground="#777777"
                                FontSize="{TemplateBinding FontSize}" 
                                />
                            <TextBox 
                                Padding="4" 
                                FontSize="{TemplateBinding FontSize}"
                                Background="Transparent" 
                                BorderThickness="0"
                                CaretBrush="{TemplateBinding Foreground}"
                                Foreground="{TemplateBinding Foreground}" 
                                Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Text, UpdateSourceTrigger=PropertyChanged}" 
                                />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- /TextBox -->

    <Style TargetType="{x:Type extensions:CustomTextBox}">
        <Setter Property="Background" Value="#121212" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#787878" />
        <Setter Property="Padding" Value="8,3,8,0" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Height" Value="32" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type extensions:CustomTextBox}">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Height="{TemplateBinding Height}" Width="{TemplateBinding Width}"
                            >
                        <Grid>
                            <TextBlock x:Name="PlaceholderTextBlock"
                                       Text="{TemplateBinding Placeholder}"
                                       Visibility="Collapsed"
                                       Padding="10, 3, 8, 0"
                                       FontSize="{TemplateBinding FontSize}"
                                       Foreground="{TemplateBinding BorderBrush}"
                                       Height="{TemplateBinding Height}"
                                       />
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEnabled" Value="True"/>
                                <Condition Property="Text" Value=""/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PlaceholderTextBlock" Property="Visibility" Value="Visible"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
