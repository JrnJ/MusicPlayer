<UserControl x:Class="MusicPlayer.MVVM.View.PlaylistsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicPlayer.MVVM.View" xmlns:viewmodel="clr-namespace:MusicPlayer.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">

    <UserControl.DataContext>
        <viewmodel:PlaylistsViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <StackPanel>
            <ItemsControl x:Name="MyItems" ItemsSource="{Binding Global.Playlists}" Margin="0, 0, 8, 0"
                          IsEnabled="True"
                          >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource PlaylistsItem}" 
                                Command="{Binding ElementName=MyItems, Path=DataContext.PlaylistViewCommand}"
                                CommandParameter="{Binding Id}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
